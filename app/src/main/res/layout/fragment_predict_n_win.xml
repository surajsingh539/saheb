<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context="com.iplplay2win.app.predict_n_winFragment"
    tools:showIn="@layout/activity_predict_n_win">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Select One Match "
    android:padding="16dip"
    android:textSize="30sp"
    android:textColor="@color/cardview_light_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dip"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/teamA_logo_predict"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/teamA_text_predict"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KKR"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.8"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/match_time_predict"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17:00"
                        android:layout_marginTop="-5dip"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/place_schedule_predict"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dip"
                        android:text="kolkata"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="end|center"
                    android:layout_weight="0.1"
                    android:layout_gravity="center_vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/teamB_logo_predict"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/teamB_text_predict"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RCB"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="100dip"
            app:cardCornerRadius="12dp"
            android:layout_margin="8dp"
            app:contentPadding="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:weightSum="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.1">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/teamA_logo_predict_b"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/teamA_text_predict_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KKR"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="0.8"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/match_time_predict_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17:00"
                        android:layout_marginTop="-5dip"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="28sp" />

                    <TextView
                        android:id="@+id/place_predict_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="4dip"
                        android:text="kolkata"
                        android:layout_marginTop="-5dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="end|center"
                    android:layout_weight="0.1"
                    android:layout_gravity="center_vertical">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/teamB_logo_predict_b"
                        android:layout_width="60dip"
                        android:layout_height="60dip"
                        android:layout_gravity="center" />

                    <TextView
                        android:id="@+id/teamB_text_predict_b"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="RCB"
                        android:textAllCaps="true"
                        android:layout_gravity="center"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"/>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>
        
    </LinearLayout>
</LinearLayout>
